<Window x:Class="smartfarm_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="LMS Smart Farm"
        Height="650"
        Width="1000"
        Background="#121212">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 로고 영역 -->
            <RowDefinition Height="*"/>
            <!-- 탭 영역 -->
        </Grid.RowDefinitions>

        <!-- ================= 상단 로고 바 ================= -->
        <Border Grid.Row="0"
                Background="#1E1E1E"
                Height="60">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0">
                <TextBlock Text="LMS"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#4CAF50"
                           Margin="0,0,4,0"/>
                <TextBlock Text="Smart Farm"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- ================= 메인 탭 컨트롤 ================= -->
        <TabControl Grid.Row="1"
                    x:Name="MainTab"
                    Background="#121212"
                    BorderThickness="0"
                    TabStripPlacement="Left"
                    Foreground="White"
                    Margin="0">

            <!-- ========== [탭 1 : 실시간 Chart] ========== -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Vertical"
                                Margin="4"
                                HorizontalAlignment="Center">
                        <TextBlock Text="📊"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Chart"
                                   FontSize="10"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <Grid Background="#121212" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 상단: TEMP1 / TEMP2 / 알람 버튼 -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10"
                                VerticalAlignment="Center">

                        <!-- TEMP1 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="TEMP1:"
                                       FontSize="18"
                                       Foreground="LightGray"
                                       Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtTemp1"
                                       Text="--.- ℃"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>

                        <!-- TEMP2 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="TEMP2:"
                                       FontSize="18"
                                       Foreground="LightGray"
                                       Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtTemp2"
                                       Text="--.- ℃"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                        <Button x:Name="AlarmButton"
                                Content="Alarm"
                                Width="90"
                                Height="32"
                                Background="#262626"
                                Foreground="White"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                />

                        <!-- 알람 버튼 -->
                    </StackPanel>

                    <!-- 차트 + 왼쪽 위 Temperature 라벨 -->
                    <Grid Grid.Row="1">
                        <TextBlock Text="Temperature (℃)"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="10,4,0,0"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>

                        <lvc:CartesianChart x:Name="TemperatureChart"
                                            Margin="0,30,0,0"
                                            Background="#1E1E1E"
                                            LegendLocation="Right"
                                            Foreground="White"
                                            FontSize="14"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ========== [탭 2 : Analysis] ========== -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Vertical"
                                Margin="4"
                                HorizontalAlignment="Center">
                        <TextBlock Text="📈"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Analysis"
                                   FontSize="10"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <Grid Margin="20"
                      Background="#121212">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 리소스 : 어두운 툴팁 (각 파이차트마다 새 인스턴스) -->
                    <Grid.Resources>
                        <lvc:DefaultTooltip x:Key="DarkTooltip"
                                            x:Shared="False"
                                            Background="#333333"
                                            Foreground="White"
                                            FontSize="14"/>
                    </Grid.Resources>

                    <!-- 날짜 선택 + 조회 버튼 -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0 0 0 15">
                        <DatePicker x:Name="dpDay"
                                    Width="150"
                                    Foreground="Black"
                                    Background="White"/>
                        <Button Content="조회"
                                Width="100"
                                Height="30"
                                Margin="10,0,0,0"
                                Background="#333333"
                                Foreground="White"
                                Click="BtnQuery_Click"/>
                    </StackPanel>

                    <!-- 통계 DataGrid -->
                    <DataGrid Grid.Row="1"
                              x:Name="dgResult"
                              AutoGenerateColumns="False"
                              Background="#1E1E1E"
                              Foreground="White"
                              FontSize="16"
                              BorderThickness="0"
                              HorizontalGridLinesBrush="#444444"
                              VerticalGridLinesBrush="#444444">

                        <DataGrid.Resources>
                            <!-- 헤더 스타일 -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>

                            <!-- 행 + 선택 행 스타일 -->
                            <Style TargetType="DataGridRow">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#4CAF50"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="센서"
                                                Binding="{Binding Sensor}"
                                                Width="*"/>
                            <DataGridTextColumn Header="최소값"
                                                Binding="{Binding Min}"
                                                Width="*"/>
                            <DataGridTextColumn Header="최댓값"
                                                Binding="{Binding Max}"
                                                Width="*"/>
                            <DataGridTextColumn Header="평균"
                                                Binding="{Binding Avg}"
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 파이 차트 2개 (Sensor A / B) -->
                    <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,10,0,0">

                        <!-- Sensor A 카드 -->
                        <StackPanel Width="230" Margin="0,0,40,0">
                            <TextBlock Text="Sensor A"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>
                            <lvc:PieChart x:Name="pieA"
                      Width="230"
                      Height="210"
                      Foreground="White"
                      DataTooltip="{StaticResource DarkTooltip}"/>
                        </StackPanel>

                        <!-- Sensor B 카드 -->
                        <StackPanel Width="230" Margin="0,0,0,0">
                            <TextBlock Text="Sensor B"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>
                            <lvc:PieChart x:Name="pieB"
                      Width="230"
                      Height="210"
                      Foreground="White"
                      DataTooltip="{StaticResource DarkTooltip}"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
